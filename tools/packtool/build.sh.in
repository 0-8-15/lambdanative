if [ "@SYS_PLATFORM@" = "@SYS_HOSTPLATFORM@" ]; then
  tgt=@SYS_HOSTPREFIX@/bin/packtool@SYS_EXEFIX@
  auxsrc="flofix.scm string.scm time.scm u8vector.scm u8vector-compress.scm"
  src="packtool.scm"
  if [ ! -e $tgt ] || [ $src -nt $tgt ]; then
    src="$auxsrc $src"
    echo " => $tgt.."
    pwd
    for file in $auxsrc; do
      cp ../../modules/ln_core/$file .
    done
    @SYS_GSC@ -o $tgt -exe $src
    if [ ! $? = 0 ]; then exit 1; fi
    rm $auxsrc
  fi
fi
