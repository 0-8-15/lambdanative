#!/bin/sh

PKGSRC=openssl-1.0.1c.tar.gz

src=@SYS_PREFIXROOT@/packages/$PKGSRC

if [ ! -f $src -a `which wget` ]; then
  echo "==> No source found, attempting to download.."
  wget http://www.openssl.org/source/$PKGSRC -O $src
fi

if [ ! -f $src ]; then
  echo "==> ERROR: Unable to proceed. Please obtain $src first."
  exit 1
fi

tmpdir=tmp_compile

if [ -d $tmpdir ]; then
rm -rf $tmpdir
fi
mkdir $tmpdir

here=`pwd`
cd $tmpdir
echo "==> Extracting source..."
tar -zxf $src 

echo "==> Configuring source..."
cd *

patches=`ls -1 ../../*.patch`
for p in $patches; do
if [ $p ]; then
  echo "==> applying patches from $p"
  patch -p0 < $p
fi
done

case @SYS_PLATFORM@ in
win32*)
  TGT=mingw
;;
linux)
  TGT=linux-generic32
;;
*)
  TGT=BSD-generic32
;;
esac

CC="@SYS_CC@" AR="@SYS_AR@" RANLIB="@SYS_RANLIB@" ./Configure --openssldir="@SYS_PREFIX@" \
no-shared no-threads no-zlib no-asm no-dso no-sse2 $TGT

# we are not using the gcc wrapper, so platform flags won't work
mv Makefile tmp
cat tmp | sed "s/-arch i386//g;s/-arch x86_64/-m32/" > Makefile

echo "==> Compiling source..."
CC="@SYS_CC@" AR="@SYS_AR@" RANLIB="@SYS_RANLIB@" make

echo "==> Installing..."
cp *.a @SYS_PREFIX@/lib
cp -L -R include/openssl @SYS_PREFIX@/include

cd "$here"

echo "==> Cleaning up..."
rm -rf $tmpdir

echo "==> All done."
